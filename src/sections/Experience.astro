---
import { ExperienceList } from "@/components";
import { ExperienceIcon } from "@/icons";
import { t } from "i18next";
---

<section
  id="experience"
  class="scroll-mt-20 border-t border-t-white/25 px-4 py-16 shadow-inner shadow-black/75"
>
  <div class="m-auto flex max-w-6xl flex-col">
    <span class="mb-4 flex items-center justify-center gap-4 text-white">
      <ExperienceIcon class="size-6" />
      <h2 class="text-center text-3xl font-bold text-white md:text-4xl">
        {t("experience.title")}
      </h2>
    </span>
    <p
      class="mb-8 text-balance text-center text-white/75"
      set:html={t("experience.description")}
    />
    <ExperienceList />
  </div>
</section>

<style>
  #experience {
    position: relative;
  }

  #experience::before,
  #experience::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  #experience::after {
    background: radial-gradient(
      30% 30% at 20% 70%,
      var(--color-primary-transparent) 10%,
      transparent 100%
    );
  }

  #experience::before {
    background: radial-gradient(
      30% 30% at 80% 40%,
      var(--color-tertiary-transparent) 10%,
      transparent 100%
    );
  }
</style>
