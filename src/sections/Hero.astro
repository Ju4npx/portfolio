<style>
  #hero {
    position: relative;
    min-height: calc(100vh - 80px);
    overflow: hidden;
  }

  .img-hero {
    filter: drop-shadow(0 0 5px rgba(0, 0, 0, 0.5));
    mask-image: linear-gradient(to bottom, black 75%, transparent 100%);
  }
</style>
