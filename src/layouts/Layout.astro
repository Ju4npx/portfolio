---
import "@/base.css";
import "@fontsource-variable/montserrat";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="author" content="Juan Pablo Machado" />
    <meta name="description" content="Soy desarrollador web Full Stack" />
    <meta
      name="keywords"
      content="juan pablo machado, desarrollador software, desarrollador web, desarrollador fullstack, desarrollo web"
    />
    <meta name="copyright" content="Juan Pablo Machado" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  :root {
    --color-primary: rgb(0, 162, 255);
    --color-secondary: rgb(242, 33, 88);
    --color-light: #dee3e6;
    --color-dark: #1f2235;

    --color-primary-transparent: rgba(0, 162, 255, 0.1);
    --color-secondary-transparent: rgba(242, 33, 88, 0.1);
    --color-tertiary-transparent: rgb(122, 16, 255, 0.1);
  }

  html {
    background: ##181920;
    font-family: "Montserrat Variable", sans-serif;
    min-height: 100vh;
    scrollbar-gutter: stable;
  }

  * {
    scrollbar-width: thin;
    scrollbar-color: white transparent;
  }

  /* Chrome, Edge, and Safari */
  *::-webkit-scrollbar {
    width: 8px;
  }

  *::-webkit-scrollbar-track {
    background: transparent;
  }

  *::-webkit-scrollbar-thumb {
    background-color: white;
    border-radius: 2em;
    border: 0;
  }
</style>
